---
import CountryCard from "./CountryCard.astro"
import { Country } from "../services/country"

const countries = Country.getAll()
---

<div class="grid grid-cols-1 gap-10 p-9 sm:grid-cols-2 sm:px-0 md:grid-cols-3 md:py-12 lg:grid-cols-4 xl:gap-20">
  {countries.map((country) => (
    <CountryCard {...country} />
  ))}
</div>
